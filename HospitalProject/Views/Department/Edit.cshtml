@model HospitalProject.Models.DepartmentDto
@{ ViewBag.Title = "Edit"; }

<h2>Update Department</h2>
<nav>
    <ul>
        <li><a href="/Department/Index">Go back to home</a></li>

        <li><a style="color:#ab2020;" href="/Doctor/DeleteConfirm/@Model.DepartmentID">Delete</a></li>
    </ul>
</nav>
<form action="/Department/Update/@Model.DepartmentID" method="POST">
    <div style="display:none;">
        <input type="text" name="DepartmentID" value="@Model.DepartmentID" />
    </div>
    <div>
        <label for="departmentname">Department Name: </label>
        <input type="text" id="departmentname" name="DepartmentName" value="@Model.DepartmentName" />
    </div>
    <div>
        <label for="departmentdescription">Department Description: </label>
        <input type="text" id="departmentdescription" name="DepartmentDescription" value="@Model.DepartmentDescription" />
    </div>
    <div>
        <button type="submit">Add a New Department</button>
    </div>
</form>

