
@{ ViewBag.Title = "Create"; }

<h2>Add a New Department</h2>

<form action="/Department/Create" method="POST">
    <div>
        <label for="departmentname">Department Name: </label>
        <input type="text" id="departmentname" name="DepartmentName" />
    </div>
    <div>
        <label for="departmentdescription">Department Description: </label>
        <input type="text" id="departmentdescription" name="DepartmentDescription" />
    </div>
    <div>
        <button type="submit">Add a New Department</button>
    </div>
</form>